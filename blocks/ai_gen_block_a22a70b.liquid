      {% for i in (1..3) %}
        {% liquid
          assign feature_enabled_key = 'feature_left_' | append: i | append: '_enabled'
          assign feature_icon_key = 'feature_left_' | append: i | append: '_icon'
          assign feature_title_key = 'feature_left_' | append: i | append: '_title'
          assign feature_description_key = 'feature_left_' | append: i | append: '_description'

          assign feature_enabled = block.settings[feature_enabled_key]
          assign feature_icon = block.settings[feature_icon_key]
          assign feature_title = block.settings[feature_title_key]
          assign feature_description = block.settings[feature_description_key]
        %}

        {% if feature_enabled and feature_title != blank %}
          <div class="ai-product-showcase-feature-{{ ai_gen_id }}">
            <div class="ai-product-showcase-feature-icon-{{ ai_gen_id }}">
              {% case feature_icon %}
                {% when 'star' %}
                  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <polygon points="12,2 15.09,8.26 22,9.27 17,14.14 18.18,21.02 12,17.77 5.82,21.02 7,14.14 2,9.27 8.91,8.26"></polygon>
                  </svg>
                {% when 'shield' %}
