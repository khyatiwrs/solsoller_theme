                  </svg>
              {% endcase %}
            </div>
            <div class="ai-product-showcase-feature-content-{{ ai_gen_id }}">
              <h3 class="ai-product-showcase-feature-title-{{ ai_gen_id }}">{{ feature_title }}</h3>
              {% if feature_description != blank %}
                <p class="ai-product-showcase-feature-description-{{ ai_gen_id }}">{{ feature_description }}</p>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>

