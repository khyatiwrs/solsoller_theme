{% doc %}
  @prompt
    Create a dynamic product showcase section with a central hero image and feature points positioned on the left and right sides. Each feature should have an icon, title, and description. Include settings to upload the main product image, add/remove feature items, customize icons, titles, descriptions, and adjust positioning. Make it responsive with the features stacking below the image on mobile devices.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-showcase-{{ ai_gen_id }} {
    padding: 60px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-product-showcase-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    display: grid;
    grid-template-columns: 1fr 2fr 1fr;
    gap: 40px;
    align-items: center;
  }

  .ai-product-showcase-features-left-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 40px;
    text-align: right;
  }

  .ai-product-showcase-features-right-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: 40px;
    text-align: left;
  }

  .ai-product-showcase-hero-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    max-width: 500px;
    margin: 0 auto;
  }

  .ai-product-showcase-hero-image-{{ ai_gen_id }} {
    width: 100%;
    height: auto;
    border-radius: {{ block.settings.image_border_radius }}px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .ai-product-showcase-hero-placeholder-{{ ai_gen_id }} {
    width: 100%;
    aspect-ratio: 1;
    background-color: #f4f4f4;
    border-radius: {{ block.settings.image_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .ai-product-showcase-hero-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.5;
  }

  .ai-product-showcase-feature-{{ ai_gen_id }} {
    display: flex;
    align-items: flex-start;
    gap: 16px;
    max-width: 300px;
  }

  .ai-product-showcase-features-left-{{ ai_gen_id }} .ai-product-showcase-feature-{{ ai_gen_id }} {
    flex-direction: row-reverse;
    margin-left: auto;
  }

  .ai-product-showcase-feature-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    background-color: {{ block.settings.icon_background_color }};
    border-radius:50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    color: {{ block.settings.icon_color }};
  }

  .ai-product-showcase-feature-icon-{{ ai_gen_id }} svg {
    width: calc({{ block.settings.icon_size }}px * 0.6);
    height: calc({{ block.settings.icon_size }}px * 0.6);
  }

  .ai-product-showcase-feature-content-{{ ai_gen_id }} {
    flex-grow: 1;
  }

  .ai-product-showcase-feature-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    color: {{ block.settings.title_color }};
    margin: 0 0 8px 0;
    line-height: 1.3;
  }

  .ai-product-showcase-feature-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    line-height: 1.5;
    margin: 0;
  }

  @media screen and (max-width: 768px) {
    .ai-product-showcase-container-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
      gap: 40px;
      text-align: center;
    }

    .ai-product-showcase-features-left-{{ ai_gen_id }},
    .ai-product-showcase-features-right-{{ ai_gen_id }} {
      order: 2;
      text-align: left;
    }

    .ai-product-showcase-hero-{{ ai_gen_id }} {
      order: 1;
    }

    .ai-product-showcase-feature-{{ ai_gen_id }} {
      max-width: 100%;
      margin: 0;
    }

    .ai-product-showcase-features-left-{{ ai_gen_id }} .ai-product-showcase-feature-{{ ai_gen_id }} {
      flex-direction: row;
    }
  }

  @media screen and (max-width: 480px) {
    .ai-product-showcase-{{ ai_gen_id }} {
      padding: 40px 16px;
    }

    .ai-product-showcase-container-{{ ai_gen_id }} {
      gap: 30px;
    }

    .ai-product-showcase-features-left-{{ ai_gen_id }},
    .ai-product-showcase-features-right-{{ ai_gen_id }} {
      gap: 30px;
    }
  }
{% endstyle %}

<div class="ai-product-showcase-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
