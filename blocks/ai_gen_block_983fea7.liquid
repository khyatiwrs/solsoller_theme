{% doc %}
  @prompt
    Create a dynamic video showcase section with clickable cards that link to Instagram. Each card should have a video thumbnail with play button overlay, title, description, view count and likes count. Display 4 cards in a row on desktop and 1 card on mobile. Include settings to add/remove video items, customize titles, descriptions, Instagram URLs, and view/like counts. Make it responsive with hover effects and smooth transitions., it will some time video and some time image not all for video

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-media-showcase-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0;
    background-color: {{ block.settings.background_color }};
  }

  .ai-media-showcase-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-media-showcase-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: {{ block.settings.card_gap }}px;}

  .ai-media-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    text-decoration: none;
    color: inherit;
    display: block;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .ai-media-card-{{ ai_gen_id }}:hover {
    transform: translateY(-8px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }

  .ai-media-thumbnail-container-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    aspect-ratio: 16/9;
    overflow: hidden;
  }

  .ai-media-thumbnail-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }

  .ai-media-card-{{ ai_gen_id }}:hover .ai-media-thumbnail-{{ ai_gen_id }} {
    transform: scale(1.05);
  }

  .ai-media-thumbnail-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-media-thumbnail-placeholder-{{ ai_gen_id }} svg {
    width: 60px;
    height: 60px;
    color: #ccc;
  }

  .ai-media-play-overlay-{{ ai_gen_id }} {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 60px;
    height: 60px;
    background-color: rgba(0, 0, 0, 0.7);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .ai-media-card-{{ ai_gen_id }}:hover .ai-media-play-overlay-{{ ai_gen_id }} {
    background-color: {{ block.settings.play_button_color }};
    transform: translate(-50%, -50%) scale(1.1);
  }

  .ai-media-play-icon-{{ ai_gen_id }} {
    width: 24px;
    height: 24px;
    color: white;
    margin-left: 3px;
  }

  .ai-media-type-badge-{{ ai_gen_id }} {
    position: absolute;
    top: 12px;
    right: 12px;
    background-color: rgba(0, 0, 0, 0.8);
    color: white;
    padding: 4px 8px;
    border-radius: 12px;
    font-size: 10px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .ai-media-type-badge-video-{{ ai_gen_id }} {
    background-color: {{ block.settings.video_badge_color }};
  }

  .ai-media-type-badge-image-{{ ai_gen_id }} {
    background-color: {{ block.settings.image_badge_color }};
  }

  .ai-media-card-content-{{ ai_gen_id }} {
    padding: {{ block.settings.card_padding }}px;
  }

  .ai-media-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    font-weight: 600;
    color: {{ block.settings.title_color }};
    margin: 0 0 8px 0;
    line-height: 1.3;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .ai-media-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    margin: 0 0 12px 0;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .ai-media-stats-{{ ai_gen_id }} {
    display: flex;
    gap: 16px;
    font-size: {{ block.settings.stats_size }}px;
    color: {{ block.settings.stats_color }};
  }

  .ai-media-stat-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .ai-media-stat-icon-{{ ai_gen_id }} {
    width: 16px;
    height: 16px;
  }

  @media screen and (max-width: 990px) {
    .ai-media-showcase-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-media-showcase-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }

    .ai-media-showcase-container-{{ ai_gen_id }} {
      padding: 0 16px;
    }
  }
{% endstyle %}

<div class="ai-media-showcase-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-media-showcase-container-{{ ai_gen_id }}">
    <div class="ai-media-showcase-grid-{{ ai_gen_id }}">
      {% for i in (1..4) %}
        {% liquid
          assign media_enabled_key = 'media_' | append: i | append: '_enabled'
          assign media_type_key = 'media_' | append: i | append: '_type'
          assign media_image_key = 'media_' | append: i | append: '_image'
          assign media_title_key = 'media_' | append: i | append: '_title'
          assign media_description_key = 'media_' | append: i | append: '_description'
          assign media_url_key = 'media_' | append: i | append: '_url'
          assign media_views_key = 'media_' | append: i | append: '_views'
          assign media_likes_key = 'media_' | append: i | append: '_likes'

          assign media_enabled = block.settings[media_enabled_key]
          assign media_type = block.settings[media_type_key]
          assign media_image = block.settings[media_image_key]
          assign media_title = block.settings[media_title_key]
          assign media_description = block.settings[media_description_key]
          assign media_url = block.settings[media_url_key]
          assign media_views = block.settings[media_views_key]
          assign media_likes = block.settings[media_likes_key]
        %}

        {% if media_enabled %}
          <a
            href="{{ media_url }}"
            class="ai-media-card-{{ ai_gen_id }}"
            target="_blank"
            rel="noopener noreferrer"
            aria-label="View {{ media_title }} on Instagram"
          >
            <div class="ai-media-thumbnail-container-{{ ai_gen_id }}">
              {% if media_image %}
                <img
                  src="{{ media_image | image_url: width: 600 }}"
                  alt="{{ media_title | escape }}"
                  class="ai-media-thumbnail-{{ ai_gen_id }}"
                  loading="lazy"
                  width="600"
                  height="338"
                >
              {% else %}
                <div class="ai-media-thumbnail-placeholder-{{ ai_gen_id }}">
                  {% if media_type == 'video' %}
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                      <rect width="18" height="11" x="3" y="11" rx="2" ry="2"/>
                      <circle cx="12" cy="12" r="10"/>
                      <polygon points="10,8 16,12 10,16 10,8"/>
                    </svg>
                  {% else %}
                    {{ 'image' | placeholder_svg_tag }}
                  {% endif %}
                </div>
              {% endif %}

              {% if media_type == 'video' %}
                <div class="ai-media-play-overlay-{{ ai_gen_id }}">
                  <svg
                    class="ai-media-play-icon-{{ ai_gen_id }}"
                    xmlns="http://www.w3.org/2000/svg"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                  >
                    <polygon points="5,3 19,12 5,21 5,3"/>
                  </svg>
                </div>
              {% endif %}

              <div class="ai-media-type-badge-{{ ai_gen_id }} ai-media-type-badge-{{ media_type }}-{{ ai_gen_id }}">
                {{ media_type }}
              </div>
            </div>

            <div class="ai-media-card-content-{{ ai_gen_id }}">
              {% if media_title != blank %}
                <h3 class="ai-media-title-{{ ai_gen_id }}">{{ media_title }}</h3>
              {% endif %}

              {% if media_description != blank %}
                <p class="ai-media-description-{{ ai_gen_id }}">{{ media_description }}</p>
              {% endif %}<div class="ai-media-stats-{{ ai_gen_id }}">
                {% if media_views != blank %}
                  <div class="ai-media-stat-{{ ai_gen_id }}">
                    <svg
                      class="ai-media-stat-icon-{{ ai_gen_id }}"
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"/>
                      <circle cx="12" cy="12" r="3"/>
                    </svg>
                    <span>{{ media_views }}</span>
                  </div>
                {% endif %}

                {% if media_likes != blank %}
                  <div class="ai-media-stat-{{ ai_gen_id }}">
                    <svg
                      class="ai-media-stat-icon-{{ ai_gen_id }}"
                      xmlns="http://www.w3.org/2000/svg"
                      viewBox="0 0 24 24"
                      fill="none"
                      stroke="currentColor"
                      stroke-width="2"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                    >
                      <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"/>
                    </svg>
                    <span>{{ media_likes }}</span>
                  </div>
                {% endif %}
              </div>
            </div>
          </a>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

