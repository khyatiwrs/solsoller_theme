{% stylesheet %}
  .dynamic-media-section {
    padding: 20px;
    border: 1px solid #ccc;
    margin-bottom: 20px;
    background: #f9f9f9;
  }

  .dynamic-media-title {
    font-size: 24px;
    font-weight: bold;
    margin-bottom: 20px;
    text-align: center;
  }

  .dynamic-media-item {
    margin-bottom: 20px;
  }

  .dynamic-media-item img,
  .dynamic-media-item video {
    max-width: 100%;
    border-radius: 10px;
    display: block;
    margin: 0 auto;
  }
{% endstylesheet %}

<div class="dynamic-media-section">
  {% if section.settings.section_title != blank %}
    <h2 class="dynamic-media-title">{{ section.settings.section_title }}</h2>
  {% endif %}

  {% for block in section.blocks %}
    <div class="dynamic-media-item">
      {% if block.type == 'image' %}
        {% if block.settings.image %}
          <img src="{{ block.settings.image | image_url: width: 1000 }}" alt="Dynamic image" loading="lazy">
        {% endif %}
      {% elsif block.type == 'video' %}
        {% if block.settings.video_url %}
          <video controls>
            <source src="{{ block.settings.video_url }}" type="video/mp4">
            Your browser does not support the video tag.
          </video>
        {% endif %}
      {% endif %}
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Dynamic Media Section",
  "settings": [
    {
      "type": "text",
      "id": "section_title",
      "label": "Section Title",
      "default": "Our Media Gallery"
    }
  ],
  "max_blocks": 10,
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Upload Image"
        }
      ]
    },
    {
  "type": "video",
  "name": "Video",
  "settings": [
    {
      "type": "url",
      "id": "video_url",
      "label": "Video URL"
    }
  ]
}
  ],
  "presets": [
    {
      "name": "Dynamic Media Section",
      "category": "Media",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "video"
        },
        {
          "type": "image"
        },
        {
          "type": "video"
        }
      ]
    }
  ]
}
{% endschema %}
