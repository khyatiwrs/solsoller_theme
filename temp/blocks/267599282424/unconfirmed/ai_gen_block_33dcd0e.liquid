{% doc %}
  @prompt
    Create a rich text section with a customizable heading, description text, and dynamic button. The section should allow merchants to edit the heading text, description content, and button text/link through the theme customizer. Include styling options for text alignment and button appearance.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-rich-text-section-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0;
    text-align: {{ block.settings.text_alignment }};
    background-color: {{ block.settings.background_color }};
  }

  .ai-rich-text-content-{{ ai_gen_id }} {
    max-width: {{ block.settings.content_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-rich-text-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 {{ block.settings.heading_spacing }}px 0;
    line-height: 1.2;
  }

  .ai-rich-text-description-{{ ai_gen_id }} {
    color: {{ block.settings.text_color }};
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.6;
    margin: 0 0 {{ block.settings.text_spacing }}px 0;
  }

  .ai-rich-text-description-{{ ai_gen_id }} p {
    margin: 0 0 16px 0;
  }

  .ai-rich-text-description-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  .ai-rich-text-button-wrapper-{{ ai_gen_id }} {
    margin-top: {{ block.settings.button_spacing }}px;
  }

  .ai-rich-text-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: {{ block.settings.button_font_weight }};
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    transition: all 0.3s ease;
    cursor: pointer;
  }

  .ai-rich-text-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background_color }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
    transform: translateY(-2px);
  }

  @media screen and (max-width: 749px) {
    .ai-rich-text-section-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.7 }}px 0;
    }

    .ai-rich-text-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
    }

    .ai-rich-text-description-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;
    }

    .ai-rich-text-button-{{ ai_gen_id }} {
      font-size: {{ block.settings.button_text_size | times: 0.9 }}px;
      padding: {{ block.settings.button_padding_vertical | times: 0.8 }}px {{ block.settings.button_padding_horizontal | times: 0.8 }}px;
    }
  }
{% endstyle %}

<div class="ai-rich-text-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-rich-text-content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-rich-text-heading-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h2>
    {% endif %}

    {% if block.settings.description != blank %}
      <div class="ai-rich-text-description-{{ ai_gen_id }}">
        {{ block.settings.description }}
      </div>
    {% endif %}

    {% if block.settings.button_text != blank %}
      <div class="ai-rich-text-button-wrapper-{{ ai_gen_id }}">
        {% if block.settings.button_link != blank %}
          <a href="{{ block.settings.button_link }}" class="ai-rich-text-button-{{ ai_gen_id }}">
            {{ block.settings.button_text }}
          </a>
        {% else %}
          <span class="ai-rich-text-button-{{ ai_gen_id }}">
            {{ block.settings.button_text }}
          </span>
        {% endif %}
      </div>
    {% endif %}
  </div>
</div>

