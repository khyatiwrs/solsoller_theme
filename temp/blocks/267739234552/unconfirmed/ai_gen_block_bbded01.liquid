{% doc %}
  @prompt
    Create a dynamic product features section with a grid layout that displays customizable feature cards. Each card should have an icon, title, and description. The section should include settings to add/remove feature items, customize the heading and subheading, and adjust the layout. Make it responsive with a clean, modern design similar to a features showcase section.

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-product-features-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding_top }}px 0 {{ block.settings.section_padding_bottom }}px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-product-features-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-product-features-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: {{ block.settings.header_spacing }}px;
  }

  .ai-product-features-heading-{{ ai_gen_id }} {
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
    margin: 0 0 16px;
    line-height: 1.2;
  }

  .ai-product-features-subheading-{{ ai_gen_id }} {
    color: {{ block.settings.subheading_color }};
    font-size: {{ block.settings.subheading_size }}px;
    margin: 0;
    line-height: 1.4;
  }

  .ai-product-features-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.columns_desktop }}, 1fr);
    gap: {{ block.settings.grid_gap }}px;
  }

  .ai-product-features-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_background_color }};
    border: {{ block.settings.card_border_width }}px solid {{ block.settings.card_border_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    padding: {{ block.settings.card_padding }}px;
    text-align: {{ block.settings.card_text_alignment }};
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .ai-product-features-card-{{ ai_gen_id }}:hover {
    transform: translateY(-{{ block.settings.hover_lift }}px);
    box-shadow: 0 {{ block.settings.hover_shadow }}px {{ block.settings.hover_shadow | times: 2 }}px rgba(0, 0, 0, 0.1);
  }

  .ai-product-features-icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    margin: 0 auto {{ block.settings.icon_spacing }}px;
    background-color: {{ block.settings.icon_background_color }};
    border-radius: {{ block.settings.icon_border_radius }}px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: {{ block.settings.icon_color }};
  }

  .ai-product-features-icon-{{ ai_gen_id }} svg {
    width: calc({{ block.settings.icon_size }}px * 0.6);
    height: calc({{ block.settings.icon_size }}px * 0.6);
  }

  .ai-product-features-card-title-{{ ai_gen_id }} {
    color: {{ block.settings.card_title_color }};
    font-size: {{ block.settings.card_title_size }}px;
    margin: 0 0 {{ block.settings.title_spacing }}px;
    font-weight: 600;
    line-height: 1.3;
  }

  .ai-product-features-card-description-{{ ai_gen_id }} {
    color: {{ block.settings.card_description_color }};
    font-size: {{ block.settings.card_description_size }}px;
    margin: 0;
    line-height: 1.5;
  }

  @media screen and (max-width: 768px) {
    .ai-product-features-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.columns_mobile }}, 1fr);
      gap: {{ block.settings.grid_gap | times: 0.75 }}px;
    }

    .ai-product-features-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding_top | times: 0.75 }}px 0 {{ block.settings.section_padding_bottom | times: 0.75 }}px;
    }

    .ai-product-features-container-{{ ai_gen_id }} {
      padding: 0 16px;
    }

    .ai-product-features-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.85 }}px;
    }

    .ai-product-features-subheading-{{ ai_gen_id }} {
      font-size: {{ block.settings.subheading_size | times: 0.9 }}px;
    }

    .ai-product-features-card-{{ ai_gen_id }} {
      padding: {{ block.settings.card_padding | times: 0.8 }}px;
    }

    .ai-product-features-icon-{{ ai_gen_id }} {
      width: {{ block.settings.icon_size | times: 0.85 }}px;
      height: {{ block.settings.icon_size | times: 0.85 }}px;
    }

    .ai-product-features-icon-{{ ai_gen_id }} svg {
      width: calc({{ block.settings.icon_size | times: 0.85 }}px * 0.6);
      height: calc({{ block.settings.icon_size | times: 0.85 }}px * 0.6);
    }
  }

  @media screen and (max-width: 480px) {
    .ai-product-features-grid-{{ ai_gen_id }} {
      grid-template-columns: 1fr;
    }
  }
{% endstyle %}

<div class="ai-product-features-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-product-features-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subheading != blank %}
      <div class="ai-product-features-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-product-features-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subheading != blank %}
          <div class="ai-product-features-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</div>
        {% endif %}
      </div>
    {% endif %}<div class="ai-product-features-grid-{{ ai_gen_id }}">
      {% for i in (1..6) %}
        {% liquid
          assign feature_enabled_key = 'feature_' | append: i | append: '_enabled'
          assign feature_icon_key = 'feature_' | append: i | append: '_icon'
          assign feature_title_key = 'feature_' | append: i | append: '_title'
          assign feature_description_key = 'feature_' | append: i | append: '_description'

          assign feature_enabled = block.settings[feature_enabled_key]
          assign feature_icon = block.settings[feature_icon_key]
          assign feature_title = block.settings[feature_title_key]
          assign feature_description = block.settings[feature_description_key]
        %}

        {% if feature_enabled and feature_title != blank %}
          <div class="ai-product-features-card-{{ ai_gen_id }}">
            <div class="ai-product-features-icon-{{ ai_gen_id }}">
              {% case feature_icon %}
                {% when 'shield' %}
